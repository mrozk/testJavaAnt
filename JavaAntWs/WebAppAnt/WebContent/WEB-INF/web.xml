<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>WebAppAnt</display-name>
  <welcome-file-list>
    
    <welcome-file>index.jsp</welcome-file>
   
  </welcome-file-list>
 
    <description>Vaadin examples</description>

    <context-param>
        <param-name>productionMode</param-name>
        <param-value>false</param-value>
    </context-param>
  
  <servlet>
    <servlet-name>myservlet</servlet-name>
	    <servlet-class>
	        com.vaadin.server.VaadinServlet
	    </servlet-class>
	    <init-param>
	      <param-name>UI</param-name>
	      <param-value>com.aplant.ws.vaadin.HelloWorld</param-value>
	    </init-param>
  </servlet>
  
   <servlet>
    <servlet-name>myservlet2</servlet-name>
	    <servlet-class>
	        com.vaadin.server.VaadinServlet
	    </servlet-class>
	    <init-param>
	      <param-name>UI</param-name>
	      <param-value>com.aplant.ws.vaadin.MyHierarchicalUI.MyHierarchicalUI</param-value>
	    </init-param>
  </servlet>
  
     <servlet-mapping>
	    <servlet-name>myservlet2</servlet-name>
	    <url-pattern>/second/*</url-pattern>
	 </servlet-mapping>
  		
	  <servlet-mapping>
	    <servlet-name>myservlet</servlet-name>
	    <url-pattern>/*</url-pattern>
	 </servlet-mapping>
	 
	 	
	 
</web-app>